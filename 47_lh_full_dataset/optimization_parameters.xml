<?xml version="1.0"?>
<optimization-parameters deformetrica-min-version="3.0.0">

    <optimization-method-type>McmcSaem</optimization-method-type>

    <max-iterations>200</max-iterations>
    <save-every-n-iters>25</save-every-n-iters>
    <print-every-n-iters>1</print-every-n-iters>

    <convergence-tolerance>1e-4</convergence-tolerance>
    <initial-step-size>1e-6</initial-step-size>
    <scale-initial-step-size>Off</scale-initial-step-size>
    <max-line-search-iterations>5</max-line-search-iterations>
    <sample-every-n-mcmc-iters>25</sample-every-n-mcmc-iters>

    <use-sobolev-gradient>On</use-sobolev-gradient>

    <!--<number-of-threads>1</number-of-threads>-->
    <use-cuda>Off</use-cuda>

</optimization-parameters>
